{{template "header" .}}
<body class="body">
{{/* Website Layout - https://www.shopify.com/blog/landing-page-design# */}}
<div class="container-fluid vh-100">
    <div class="row" id="row1">
        <img id="headlineImg" src="/static/image/headliner.jpg" alt="headline image">
        <div id="fade"></div>
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div id="headlineDiv">
                <a href="https://yourplace.network" rel="noreferrer">
                    <img id="bannerImg" class="clickable cursorPointer"
                         src="/static/image/yourplace-banner-title.svg"
                         alt="YourPlace logo image">
                </a>

                <p id="subtitleText">Distributed Social Media</p>

                <div id="headlineConversationDiv">
                    <p id="headlineText1" class="headlineText chat-bubble chat-bubble-left">Where social media finally lives up to its promise</p>
                    <img src="/static/image/cat.png" id="profile1Img" class="headlineProfileImg">

                    <p id="headlineText2" class="headlineText chat-bubble chat-bubble-right">Your data. Your relationships. Your rules.</p>
                    <img src="/static/image/dog.png" id="profile2Img" class="headlineProfileImg">
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            {{template "htmlMenu" .}}
        </div>
    </div>
</div>
<input type="hidden" id="csrfToken" value="{{ .csrfToken }}">
</body>
</html>